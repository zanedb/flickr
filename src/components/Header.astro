---
import { Image } from 'astro:assets'
import profile from '../assets/profile.jpg'
import fb from '../assets/icons/fb.webp'
import twt from '../assets/icons/twitter.jpg'
---

<header>
  <div class="flex justify-between p-4">
    <nav class="flex">
      <Image
        src={profile}
        alt="Profile avatar"
        width="64"
        height="64"
        class="border-pink-200 border-2"
        loading="eager"
      />
      <div
        class="tracking-tighter scale-x-75 -translate-x-[12.5%] pl-2 h-16 flex flex-col justify-between"
      >
        <div class="flex items-baseline">
          <h1 class="text-3xl font-bold">Your photostream</h1>
          <span class="text-sm text-gray-500 pl-2">2 items / 1 view</span>
        </div>
        <ol class="flex line-clamp-1 cursor-pointer text-blue-400 *:pr-2">
          <li class="font-bold text-black">
            <a href="/">Photostream</a>
          </li>
          <li>Sets</li>
          <li>Favorites</li>
          <li>Galleries</li>
          <li>Profile</li>
          <li>Recent Activity</li>
          <li>Bars</li>
          <li>Organize</li>
          <li>More ▼</li>
        </ol>
      </div>
    </nav>
    <div class="tracking-tighter pt-2 flex h-8 items-center">
      <button
        class="bg-gray-100 text-black text-sm border-gray-300 border-1 p-1 px-2"
      >
        Slideshow
      </button>
      <Image
        src={fb}
        alt="Facebook icon"
        class="h-6 w-6 ml-2"
        loading="eager"
      />
      <Image
        src={twt}
        alt="Twitter icon"
        class="h-[26px] w-[26px] mr-2"
        loading="eager"
      />
      <button
        class="bg-gray-100 text-black text-sm border-gray-300 border-1 p-1 px-2"
      >
        Share ▼
      </button>
    </div>
  </div>
</header>
